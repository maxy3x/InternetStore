@using WebStore.Models.Filters
@using WebStore.ViewModels
@using Domain.Models
@model WebStore.Models.Filters.FilterProducts

@{
    ViewData["Title"] = "Довідник товарів";
}

@section Scripts {

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#AutoCcProd').autocomplete({
                source: '/Search/AutocompleteSearchProduct',
                minLength: 3,
                delay: 400
            });
        });
    </script>
}

<h2>Довідник товарів</h2>

@using (Html.BeginForm("Filter", "Product", FormMethod.Post))
{
    <fieldset>
        <form asp-action="Filter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table-condensed" id="filtersContracts">
                <thead>
                    <tr>
                        <th>Назва</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.EditorFor(x => x.Name, new { htmlAttributes = new { @id = "AutoCcProd", @class = "EditorRadius" } })</td>
                    </tr>
                </tbody>

            </table>
            <div class="form-group">
                <button type="submit" value="Шукати" style="border: none; background-color: Transparent;"><img src="~/images/search_icon.png" title="Шукати" width="25" height="25" /></button> | <a asp-action="Index">Показати всі..</a>
            </div>
        </form>
    </fieldset>
}

<p>
    <a asp-action="Create"><img src="~/images/add.png"> Створити новий</a>
</p>
<table class="table col-lg-10">
    <thead>
        <tr>
            <th class="col-lg-2">Назва</th>
            <th class="col-lg-1">Тип товару</th>
            <th class="col-lg-1">Тип металу</th>
            <th class="col-lg-1">Колір</th>
            <th class="col-lg-1">Стать</th>
            <th class="col-lg-1">Вага</th>
            <th class="col-lg-1">Кількість</th>
            <th class="col-lg-1">Ціна</th>
            <th class="col-lg-1">Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProductView item in ViewBag.Data)
        {
            <tr>
                <td class="col-lg-2">@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="col-lg-1">@Html.DisplayFor(modelItem => item.ProductTypeName)</td>
                <td class="col-lg-1">@Html.DisplayFor(modelItem => item.ProductMetalName)</td>
                <td class="col-lg-1">@Html.DisplayFor(modelItem => item.ProductColorName)</td>
                <td class="col-lg-1">@Html.DisplayFor(modelItem => item.GenderName)</td>
                <td class="col-lg-1">@Html.DisplayFor(modelItem => item.Weight)</td>
                <td class="col-lg-1">@Html.DisplayFor(modelItem => item.Amount)</td>
                <td class="col-lg-1">@Html.DisplayFor(modelItem => item.Price)</td>
                <td class="col-lg-1">
                    <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/edit_icon.png" width="20" height="20" alt="Редагувати" title="Редагувати" /></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><img src="~/images/preview_icon.png" width="20" height="20" alt="Перегляд" title="Перегляд" /></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/delete_icon.png" width="20" height="20" alt="Видалити" title="Видалити" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
